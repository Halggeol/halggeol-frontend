<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Page Not Found</title>
    <script>
      // 리디렉션 로직
      var repoName = '/halggeol-frontend/';
      var path = window.location.pathname.startsWith(repoName)
        ? window.location.pathname.substring(repoName.length)
        : window.location.pathname;

      window.location.replace(
        window.location.protocol +
          '//' +
          window.location.host +
          repoName +
          '#' +
          path
      );
    </script>
  </head>
  <body>
    <p>Redirecting...</p>
  </body>
</html>
